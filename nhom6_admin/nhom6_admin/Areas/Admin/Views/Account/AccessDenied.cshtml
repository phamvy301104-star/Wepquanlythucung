@{
    Layout = null;
    ViewData["Title"] = "Truy cập bị từ chối";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Truy cập bị từ chối - UME Admin</title>

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #1A1A1A 0%, #333333 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .error-page {
            text-align: center;
            color: #fff;
        }
        
        .error-icon {
            font-size: 6rem;
            color: #E53935;
            margin-bottom: 1rem;
        }
        
        .error-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }
        
        .error-message {
            font-size: 1.1rem;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 2rem;
        }
        
        .btn-back {
            background: linear-gradient(135deg, #D4AF37 0%, #B8960C 100%);
            border: none;
            padding: 0.85rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            color: #fff;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }
        
        .btn-back:hover {
            background: linear-gradient(135deg, #E8D490 0%, #D4AF37 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(212, 175, 55, 0.4);
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="error-page">
        <i class="fas fa-ban error-icon"></i>
        <h1 class="error-title">Truy cập bị từ chối</h1>
        <p class="error-message">Bạn không có quyền truy cập vào trang này.<br>Vui lòng liên hệ quản trị viên nếu bạn cho rằng đây là lỗi.</p>
        <a href="@Url.Action("Login", "Account", new { area = "Admin" })" class="btn-back">
            <i class="fas fa-arrow-left mr-2"></i> Quay lại đăng nhập
        </a>
    </div>
</body>
</html>
