@model nhom6_admin.Models.Entities.Staff
@{ ViewData["Title"] = "Chi tiết nhân viên"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1"><i class="fas fa-user-circle text-primary mr-2"></i>Chi tiết nhân viên</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Nhân viên</a></li>
                <li class="breadcrumb-item active">Chi tiết</li>
            </ol>
        </nav>
    </div>
    <div>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning"><i class="fas fa-edit mr-1"></i>Sửa</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left mr-1"></i>Quay lại</a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <img src="@(Model.AvatarUrl ?? "https://via.placeholder.com/150?text=Avatar")" class="rounded-circle mb-3" style="width:150px;height:150px;object-fit:cover;">
                <h4>@Model.FullName</h4>
                <p class="text-muted">@Model.Position - @Model.Level</p>
                @if (Model.Status == "Active")
                {
                    <span class="badge badge-success badge-lg">Đang làm việc</span>
                }
                else
                {
                    <span class="badge badge-warning badge-lg">Nghỉ phép</span>
                }
            </div>
        </div>
        
        <div class="card">
            <div class="card-header"><h5 class="mb-0"><i class="fas fa-chart-bar mr-2"></i>Thống kê</h5></div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <span>Tổng khách phục vụ</span>
                    <strong class="text-primary">@Model.TotalCustomersServed</strong>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span>Tổng doanh thu</span>
                    <strong class="text-success">@Model.TotalRevenue.ToString("N0")đ</strong>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span>Đánh giá TB</span>
                    <strong class="text-warning"><i class="fas fa-star"></i> @Model.AverageRating.ToString("0.0")</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Tổng đánh giá</span>
                    <strong class="text-info">@Model.TotalReviews</strong>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card">
            <div class="card-header"><h5 class="mb-0"><i class="fas fa-info-circle mr-2"></i>Thông tin cá nhân</h5></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><i class="fas fa-id-badge text-primary mr-2"></i><strong>Mã NV:</strong> @Model.StaffCode</p>
                        <p><i class="fas fa-envelope text-primary mr-2"></i><strong>Email:</strong> @(Model.Email ?? "N/A")</p>
                        <p><i class="fas fa-phone text-primary mr-2"></i><strong>Điện thoại:</strong> @(Model.PhoneNumber ?? "N/A")</p>
                        <p><i class="fas fa-birthday-cake text-primary mr-2"></i><strong>Ngày sinh:</strong> @(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "N/A")</p>
                    </div>
                    <div class="col-md-6">
                        <p><i class="fas fa-user-tag text-primary mr-2"></i><strong>Chức vụ:</strong> @Model.Position</p>
                        <p><i class="fas fa-calendar text-primary mr-2"></i><strong>Ngày vào làm:</strong> @Model.HireDate.ToString("dd/MM/yyyy")</p>
                        <p><i class="fas fa-money-bill text-primary mr-2"></i><strong>Lương CB:</strong> @(Model.BaseSalary?.ToString("N0") ?? "N/A")đ</p>
                        <p><i class="fas fa-clock text-primary mr-2"></i><strong>Kinh nghiệm:</strong> @Model.YearsOfExperience năm</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-calendar-check mr-2"></i>Lịch hẹn gần đây</h5>
            </div>
            <div class="card-body">
                @if (Model.Appointments != null && Model.Appointments.Any(a => !a.IsDeleted))
                {
                    <table class="table table-sm">
                        <thead>
                            <tr><th>Mã</th><th>Thời gian</th><th>Trạng thái</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var apt in Model.Appointments.Where(a => !a.IsDeleted).OrderByDescending(a => a.AppointmentDate).Take(5))
                            {
                                <tr>
                                    <td>@apt.AppointmentCode</td>
                                    <td>@apt.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (apt.Status == "Completed")
                                        {
                                            <span class="badge badge-success">Hoàn thành</span>
                                        }
                                        else if (apt.Status == "Confirmed")
                                        {
                                            <span class="badge badge-primary">Đã xác nhận</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">@apt.Status</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted text-center mb-0">Chưa có lịch hẹn</p>
                }
            </div>
        </div>
    </div>
</div>
