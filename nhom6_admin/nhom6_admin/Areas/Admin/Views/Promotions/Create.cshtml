@model nhom6_admin.Areas.Admin.Controllers.PromotionsController.PromotionViewModel
@{ ViewData["Title"] = "Thêm khuyến mãi"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1"><i class="fas fa-plus-circle text-primary mr-2"></i>Thêm khuyến mãi mới</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Khuyến mãi</a></li>
                <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
        </nav>
    </div>
</div>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-info-circle mr-2"></i>Thông tin khuyến mãi</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Code" class="required"></label>
                                <input asp-for="Code" class="form-control text-uppercase" placeholder="VD: SALE20">
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="required"></label>
                                <input asp-for="Name" class="form-control" placeholder="VD: Giảm 20% tất cả sản phẩm">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết về khuyến mãi..."></textarea>
                    </div>
                    
                    <hr>
                    <h5><i class="fas fa-percent mr-2"></i>Thiết lập giảm giá</h5>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DiscountType" class="required"></label>
                                <select asp-for="DiscountType" class="form-control" id="discountType">
                                    <option value="Percentage">Phần trăm (%)</option>
                                    <option value="FixedAmount">Số tiền cố định (VNĐ)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DiscountValue" class="required"></label>
                                <div class="input-group">
                                    <input asp-for="DiscountValue" type="number" step="0.01" class="form-control" id="discountValue">
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="discountSuffix">%</span>
                                    </div>
                                </div>
                                <span asp-validation-for="DiscountValue" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MinOrderValue"></label>
                                <div class="input-group">
                                    <input asp-for="MinOrderValue" type="number" class="form-control" placeholder="0">
                                    <div class="input-group-append"><span class="input-group-text">VNĐ</span></div>
                                </div>
                                <small class="text-muted">Giá trị đơn hàng tối thiểu để áp dụng</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MaxDiscountAmount"></label>
                                <div class="input-group">
                                    <input asp-for="MaxDiscountAmount" type="number" class="form-control" placeholder="Không giới hạn">
                                    <div class="input-group-append"><span class="input-group-text">VNĐ</span></div>
                                </div>
                                <small class="text-muted">Áp dụng cho giảm theo %</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-calendar mr-2"></i>Thời gian & Giới hạn</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="StartDate" class="required"></label>
                        <input asp-for="StartDate" type="date" class="form-control">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="EndDate" class="required"></label>
                        <input asp-for="EndDate" type="date" class="form-control">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="UsageLimit"></label>
                        <input asp-for="UsageLimit" type="number" class="form-control" placeholder="0 = Không giới hạn">
                        <small class="text-muted">Số lần tối đa được sử dụng</small>
                    </div>
                    
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActive">
                            <label class="custom-control-label" for="isActive">Kích hoạt ngay</label>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Preview -->
            <div class="card">
                <div class="card-header bg-primary">
                    <h3 class="card-title"><i class="fas fa-eye mr-2"></i>Xem trước</h3>
                </div>
                <div class="card-body text-center">
                    <div class="border rounded p-3" style="background: linear-gradient(135deg, #D4AF37 0%, #f4d03f 100%);">
                        <h4 class="text-white mb-1" id="previewCode">CODE</h4>
                        <p class="text-white mb-2" id="previewName">Tên khuyến mãi</p>
                        <h3 class="text-white mb-0" id="previewDiscount">0%</h3>
                    </div>
                </div>
            </div>
            
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left mr-1"></i>Quay lại</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Lưu khuyến mãi</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
<script>
    $(document).ready(function() {
        updatePreview();
        updateDiscountSuffix();
        
        $('#Code, #Name, #discountType, #discountValue').on('input change', updatePreview);
        $('#discountType').change(updateDiscountSuffix);
    });
    
    function updateDiscountSuffix() {
        var type = $('#discountType').val();
        $('#discountSuffix').text(type === 'Percentage' ? '%' : 'VNĐ');
    }
    
    function updatePreview() {
        var code = $('#Code').val() || 'CODE';
        var name = $('#Name').val() || 'Tên khuyến mãi';
        var type = $('#discountType').val();
        var value = $('#discountValue').val() || 0;
        
        $('#previewCode').text(code.toUpperCase());
        $('#previewName').text(name);
        $('#previewDiscount').text(type === 'Percentage' ? value + '%' : formatNumber(value) + 'đ');
    }
    
    function formatNumber(n) { return new Intl.NumberFormat('vi-VN').format(n); }
</script>
}

<style>
    .required:after { content: " *"; color: red; }
</style>
