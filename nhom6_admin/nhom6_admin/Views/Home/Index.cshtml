@{
    ViewData["Title"] = "UME Salon - Chào mừng bạn đến với UME";
    var featuredProducts = ViewBag.FeaturedProducts as List<nhom6_admin.Models.Product> ?? new List<nhom6_admin.Models.Product>();
    var featuredServices = ViewBag.FeaturedServices as List<nhom6_admin.Models.Entities.Service> ?? new List<nhom6_admin.Models.Entities.Service>();
    var categories = ViewBag.Categories as List<nhom6_admin.Models.Entities.Category> ?? new List<nhom6_admin.Models.Entities.Category>();
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="hero-content" data-aos="fade-right">
                    <h1>Nâng tầm <span>vẻ đẹp</span> của bạn</h1>
                    <p>
                        Khám phá không gian làm đẹp đẳng cấp cùng đội ngũ chuyên gia hàng đầu. 
                        Chúng tôi mang đến những trải nghiệm tuyệt vời nhất cho mái tóc và làn da của bạn.
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        <a href="@Url.Action("Booking", "Home")" class="btn btn-primary-custom">
                            <i class="bi bi-calendar-check me-2"></i>Đặt lịch ngay
                        </a>
                        <a href="@Url.Action("Services", "Home")" class="btn btn-outline-custom" style="border-color: white; color: white;">
                            <i class="bi bi-grid me-2"></i>Xem dịch vụ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3 col-6" data-aos="fade-up" data-aos-delay="0">
                <div class="stat-item">
                    <span class="number">10+</span>
                    <p class="label">Năm kinh nghiệm</p>
                </div>
            </div>
            <div class="col-md-3 col-6" data-aos="fade-up" data-aos-delay="100">
                <div class="stat-item">
                    <span class="number">50+</span>
                    <p class="label">Chuyên gia</p>
                </div>
            </div>
            <div class="col-md-3 col-6" data-aos="fade-up" data-aos-delay="200">
                <div class="stat-item">
                    <span class="number">10K+</span>
                    <p class="label">Khách hàng hài lòng</p>
                </div>
            </div>
            <div class="col-md-3 col-6" data-aos="fade-up" data-aos-delay="300">
                <div class="stat-item">
                    <span class="number">100+</span>
                    <p class="label">Dịch vụ</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="py-5 my-5">
    <div class="container">
        <div class="section-title" data-aos="fade-up">
            <h2>Dịch vụ nổi bật</h2>
            <div class="divider"></div>
            <p>Chúng tôi mang đến những dịch vụ chăm sóc sắc đẹp chuyên nghiệp với chất lượng hàng đầu</p>
        </div>
        
        <div class="row g-4">
            <!-- Default services if database is empty -->
            @if (!featuredServices.Any())
            {
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="0">
                    <div class="service-card">
                        <img src="https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80" alt="Cắt tóc">
                        <div class="card-body">
                            <h5>Cắt tóc chuyên nghiệp</h5>
                            <p class="text-muted mb-3">Cắt tóc theo phong cách mới nhất bởi các stylist hàng đầu</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price">150.000đ</span>
                                <span class="duration"><i class="bi bi-clock me-1"></i>45 phút</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-card">
                        <img src="https://images.unsplash.com/photo-1522337360788-8b13dee7a37e?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80" alt="Nhuộm tóc">
                        <div class="card-body">
                            <h5>Nhuộm tóc cao cấp</h5>
                            <p class="text-muted mb-3">Nhuộm tóc với sản phẩm nhập khẩu từ Nhật Bản, Hàn Quốc</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price">500.000đ</span>
                                <span class="duration"><i class="bi bi-clock me-1"></i>120 phút</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-card">
                        <img src="https://images.unsplash.com/photo-1570172619644-dfd03ed5d881?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80" alt="Chăm sóc da">
                        <div class="card-body">
                            <h5>Chăm sóc da mặt</h5>
                            <p class="text-muted mb-3">Liệu trình chăm sóc da chuyên sâu, trẻ hóa làn da</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price">350.000đ</span>
                                <span class="duration"><i class="bi bi-clock me-1"></i>60 phút</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                @foreach (var service in featuredServices)
                {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up">
                        <div class="service-card">
                            <img src="@(service.ImageUrl ?? "https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80")" alt="@service.Name">
                            <div class="card-body">
                                <h5>@service.Name</h5>
                                <p class="text-muted mb-3">@(service.ShortDescription ?? service.Description?.Substring(0, Math.Min(100, service.Description?.Length ?? 0)) ?? "")</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="price">@service.Price.ToString("N0")đ</span>
                                    <span class="duration"><i class="bi bi-clock me-1"></i>@service.DurationMinutes phút</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        
        <div class="text-center mt-5" data-aos="fade-up">
            <a href="@Url.Action("Services", "Home")" class="btn btn-primary-custom">
                Xem tất cả dịch vụ <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="py-5" style="background-color: var(--light-bg);">
    <div class="container py-5">
        <div class="section-title" data-aos="fade-up">
            <h2>Tại sao chọn UME?</h2>
            <div class="divider"></div>
            <p>Chúng tôi cam kết mang đến trải nghiệm làm đẹp tuyệt vời nhất cho bạn</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="0">
                <div class="feature-box">
                    <div class="icon">
                        <i class="bi bi-award"></i>
                    </div>
                    <h4>Chuyên gia hàng đầu</h4>
                    <p>Đội ngũ stylist được đào tạo bài bản, có nhiều năm kinh nghiệm trong ngành</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="feature-box">
                    <div class="icon">
                        <i class="bi bi-gem"></i>
                    </div>
                    <h4>Sản phẩm cao cấp</h4>
                    <p>Sử dụng sản phẩm chính hãng từ các thương hiệu nổi tiếng thế giới</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="feature-box">
                    <div class="icon">
                        <i class="bi bi-palette"></i>
                    </div>
                    <h4>Không gian sang trọng</h4>
                    <p>Thiết kế hiện đại, thoáng đãng mang đến cảm giác thư giãn tuyệt đối</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="300">
                <div class="feature-box">
                    <div class="icon">
                        <i class="bi bi-heart"></i>
                    </div>
                    <h4>Dịch vụ tận tâm</h4>
                    <p>Phục vụ khách hàng với sự tận tâm và chuyên nghiệp cao nhất</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="py-5 my-5">
    <div class="container">
        <div class="section-title" data-aos="fade-up">
            <h2>Sản phẩm nổi bật</h2>
            <div class="divider"></div>
            <p>Khám phá các sản phẩm chăm sóc tóc và da chất lượng cao từ những thương hiệu uy tín</p>
        </div>
        
        <div class="row g-4">
            @if (!featuredProducts.Any())
            {
                <!-- Default products if database is empty -->
                <div class="col-lg-3 col-md-4 col-6" data-aos="fade-up" data-aos-delay="0">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="https://images.unsplash.com/photo-1608248597279-f99d160bfcbc?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" alt="Shampoo">
                            <span class="badge-sale">-20%</span>
                        </div>
                        <div class="card-body">
                            <h5>Dầu gội Kerastase cao cấp</h5>
                            <div>
                                <span class="price">450.000đ</span>
                                <span class="original-price">560.000đ</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="https://images.unsplash.com/photo-1556228720-195a672e8a03?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" alt="Serum">
                        </div>
                        <div class="card-body">
                            <h5>Serum dưỡng tóc Moroccanoil</h5>
                            <div>
                                <span class="price">850.000đ</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="https://images.unsplash.com/photo-1620916566398-39f1143ab7be?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" alt="Mask">
                            <span class="badge-sale">-15%</span>
                        </div>
                        <div class="card-body">
                            <h5>Mặt nạ tóc Olaplex No.8</h5>
                            <div>
                                <span class="price">680.000đ</span>
                                <span class="original-price">800.000đ</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-6" data-aos="fade-up" data-aos-delay="300">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="https://images.unsplash.com/photo-1596755094514-f87e34085b2c?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" alt="Styling">
                        </div>
                        <div class="card-body">
                            <h5>Wax tạo kiểu Gatsby</h5>
                            <div>
                                <span class="price">120.000đ</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                @foreach (var product in featuredProducts)
                {
                    <div class="col-lg-3 col-md-4 col-6" data-aos="fade-up">
                        <a href="@Url.Action("ProductDetail", "Home", new { id = product.Id })" class="text-decoration-none">
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="@(product.ImageUrl ?? "https://images.unsplash.com/photo-1608248597279-f99d160bfcbc?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80")" alt="@product.Name">
                                    @if (product.DiscountPercent > 0)
                                    {
                                        <span class="badge-sale">-@product.DiscountPercent%</span>
                                    }
                                </div>
                                <div class="card-body">
                                    <h5>@product.Name</h5>
                                    <div>
                                        <span class="price">@product.Price.ToString("N0")đ</span>
                                        @if (product.OriginalPrice > product.Price)
                                        {
                                            <span class="original-price">@product.OriginalPrice.ToString("N0")đ</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
        
        <div class="text-center mt-5" data-aos="fade-up">
            <a href="@Url.Action("Products", "Home")" class="btn btn-primary-custom">
                Xem tất cả sản phẩm <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

