@{
    ViewData["Title"] = "Liên hệ - UME Salon";
}

<!-- Hero Section -->
<section class="py-5" style="background: linear-gradient(135deg, var(--secondary-color) 0%, #2D2D2D 100%); margin-top: 76px;">
    <div class="container py-5">
        <div class="text-center text-white" data-aos="fade-up">
            <h1 class="display-4 fw-bold mb-4">Liên hệ với <span style="color: var(--primary-color);">chúng tôi</span></h1>
            <p class="lead text-white-50">Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn</p>
        </div>
    </div>
</section>

<!-- Contact Info & Form -->
<section class="py-5 my-5">
    <div class="container">
        <div class="row g-5">
            <!-- Contact Info -->
            <div class="col-lg-5" data-aos="fade-right">
                <h3 class="mb-4" style="color: var(--secondary-color);">Thông tin liên hệ</h3>
                
                <div class="d-flex align-items-start gap-4 mb-4">
                    <div style="width: 60px; height: 60px; background: linear-gradient(135deg, var(--primary-color), var(--accent-color)); border-radius: 15px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-geo-alt text-dark fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Địa chỉ</h5>
                        <p class="text-muted mb-0">123 Đường ABC, Quận 1<br>TP. Hồ Chí Minh, Việt Nam</p>
                    </div>
                </div>
                
                <div class="d-flex align-items-start gap-4 mb-4">
                    <div style="width: 60px; height: 60px; background: linear-gradient(135deg, var(--primary-color), var(--accent-color)); border-radius: 15px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-telephone text-dark fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Điện thoại</h5>
                        <p class="text-muted mb-0">Hotline: 0123 456 789<br>Đặt lịch: 0987 654 321</p>
                    </div>
                </div>
                
                <div class="d-flex align-items-start gap-4 mb-4">
                    <div style="width: 60px; height: 60px; background: linear-gradient(135deg, var(--primary-color), var(--accent-color)); border-radius: 15px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-envelope text-dark fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Email</h5>
                        <p class="text-muted mb-0">contact@umesalon.com<br>booking@umesalon.com</p>
                    </div>
                </div>
                
                <div class="d-flex align-items-start gap-4 mb-4">
                    <div style="width: 60px; height: 60px; background: linear-gradient(135deg, var(--primary-color), var(--accent-color)); border-radius: 15px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-clock text-dark fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Giờ làm việc</h5>
                        <p class="text-muted mb-0">Thứ 2 - Chủ nhật: 8:00 - 20:00<br>Không nghỉ trưa</p>
                    </div>
                </div>
                
                <hr class="my-4">
                
                <h5 class="mb-3">Kết nối với chúng tôi</h5>
                <div class="d-flex gap-3">
                    <a href="#" style="width: 50px; height: 50px; background: var(--secondary-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--white); transition: all 0.3s ease;">
                        <i class="bi bi-facebook fs-5"></i>
                    </a>
                    <a href="#" style="width: 50px; height: 50px; background: var(--secondary-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--white); transition: all 0.3s ease;">
                        <i class="bi bi-instagram fs-5"></i>
                    </a>
                    <a href="#" style="width: 50px; height: 50px; background: var(--secondary-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--white); transition: all 0.3s ease;">
                        <i class="bi bi-tiktok fs-5"></i>
                    </a>
                    <a href="#" style="width: 50px; height: 50px; background: var(--secondary-color); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--white); transition: all 0.3s ease;">
                        <i class="bi bi-youtube fs-5"></i>
                    </a>
                </div>
            </div>
            
            <!-- Contact Form -->
            <div class="col-lg-7" data-aos="fade-left">
                <div class="p-5 rounded-4" style="background: var(--light-bg);">
                    <h3 class="mb-4" style="color: var(--secondary-color);">Gửi tin nhắn cho chúng tôi</h3>
                    
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-500">Họ và tên</label>
                                <input type="text" class="form-control" placeholder="Nguyễn Văn A" style="border-radius: 12px; padding: 14px 18px; border: 2px solid #E8E8E8;">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-500">Số điện thoại</label>
                                <input type="tel" class="form-control" placeholder="0123 456 789" style="border-radius: 12px; padding: 14px 18px; border: 2px solid #E8E8E8;">
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-500">Email</label>
                                <input type="email" class="form-control" placeholder="example@email.com" style="border-radius: 12px; padding: 14px 18px; border: 2px solid #E8E8E8;">
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-500">Chủ đề</label>
                                <select class="form-select" style="border-radius: 12px; padding: 14px 18px; border: 2px solid #E8E8E8;">
                                    <option selected>Chọn chủ đề</option>
                                    <option>Đặt lịch hẹn</option>
                                    <option>Tư vấn dịch vụ</option>
                                    <option>Hỏi về sản phẩm</option>
                                    <option>Góp ý - Khiếu nại</option>
                                    <option>Hợp tác kinh doanh</option>
                                    <option>Khác</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-500">Nội dung tin nhắn</label>
                                <textarea class="form-control" rows="5" placeholder="Nhập nội dung tin nhắn của bạn..." style="border-radius: 12px; padding: 14px 18px; border: 2px solid #E8E8E8;"></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary-custom w-100" style="padding: 15px;">
                                    <i class="bi bi-send me-2"></i>Gửi tin nhắn
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
